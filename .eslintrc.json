{
  "extends": ["plugin:node/recommended", "prettier"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "strict": ["error", "global"],
    "lines-around-directive": ["error", "never"]
  },
  "env": {
    "node": true,
    "mocha": true
  }
}
